
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spam Detection API Schema",
  "type": "object",
  "properties": {
    "label": {
      "type": "string",
      "enum": ["spam", "not_spam"],
      "description": "The classification result."
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "The model's confidence score for the prediction."
    }
  },
  "required": ["label", "confidence"],
  "additionalProperties": false,
  "example": {
    "label": "spam",
    "confidence": 0.93
  }
}
